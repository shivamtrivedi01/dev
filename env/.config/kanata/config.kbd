;; Caps to escape/control configuration for Kanata

(defsrc
  caps i u
)

(defvar
  tap-time 80
  hold-time 150
)

(defalias
  escctrl (tap-hold 100 100 esc lctl)
  i (multi f24 (tap-hold $tap-time $hold-time i rmet))
  u (multi f24 (tap-hold $tap-time $hold-time u ralt))

)

(deflayer base
  @escctrl @i  @u
)
